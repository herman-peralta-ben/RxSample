<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_received_temperature"
        android:gravity="center"
        android:text="Received Temperature" />

    <TextView
        android:id="@+id/text_received_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="--"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_emitted_temperature"
        android:gravity="center"
        android:text="Emitted Temperature" />

    <TextView
        android:id="@+id/text_emitted_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="--"
        android:textColor="@android:color/black"
        android:textSize="40sp" />
</RelativeLayout>